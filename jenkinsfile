pipeline {
    agent any

    tools {
        maven 'Maven 3.9.9'
    }

    environment {
        SERVER_IP   = "65.0.132.16"
        SSH_USER    = "ec2-user"               // FIXED (Amazon Linux user)
        SSH_CRED_ID = "node-CICD-key"
        TOMCAT_PATH = "/opt/tomcat/webapps"
        TOMCAT_SVC  = "tomcat"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/senthilkumar-2020/Tomcat-app.git',
                    credentialsId: 'node-CICD-key'
            }
        }

        stage('Build WAR') {
            steps {
                sh "mvn clean package"
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                sshagent([env.SSH_CRED_ID]) {
                    sh """
                        WAR_FILE=\$(ls target/*.war | head -n 1)

                        echo "Uploading WAR file to server..."
                        scp -o StrictHostKeyChecking=no \$WAR_FILE ${SSH_USER}@${SERVER_IP}:/tmp/

                        echo "Deploying to Tomcat..."
                        ssh -o StrictHostKeyChecking=no ${SSH_USER}@${SERVER_IP} << EOF
                            sudo systemctl stop ${TOMCAT_SVC}
                            sudo rm -rf ${TOMCAT_PATH}/studentapp*
                            sudo mv /tmp/\$(basename \$WAR_FILE) ${TOMCAT_PATH}/studentapp.war
                            sudo systemctl start ${TOMCAT_SVC}
                            sudo systemctl status ${TOMCAT_SVC} -l --no-pager
                        EOF
                    """
                }
            }
        }
    }

    post {
        success { echo "Deployment completed successfully!" }
        failure { echo "Deployment failed." }
    }
}
