pipeline {
    agent any

    tools {
        maven 'Maven 3.9.9'
    }

    environment {
        SERVER_IP   = "65.0.132.16"
        SSH_USER    = "ec2-user"
        SSH_CRED_ID = "node-CICD-key"
        TOMCAT_PATH = "/opt/tomcat/webapps"
        TOMCAT_SVC  = "tomcat"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/senthilkumar-2020/Tomcat-app.git',
                    credentialsId: 'node-CICD-key'
            }
        }

        stage('Build WAR') {
            steps {
                sh "mvn clean package"
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                sshagent([env.SSH_CRED_ID]) {
                    sh '''
                        WAR_FILE=$(ls target/*.war | head -n 1)

                        echo "Uploading WAR file to server..."
                        scp -o StrictHostKeyChecking=no "$WAR_FILE" ec2-user@65.0.132.16:/tmp/

                        echo "Deploying to Tomcat..."
                        ssh -o StrictHostKeyChecking=no ec2-user@65.0.132.16 << 'EOF'
sudo systemctl stop tomcat
sudo rm -rf /opt/tomcat/webapps/studentapp*
sudo mv /tmp/studentapp-2.2-SNAPSHOT.war /opt/tomcat/webapps/studentapp.war
sudo systemctl start tomcat
sudo systemctl status tomcat -l --no-pager
EOF
                    '''
                }
            }
        }
    }

    post {
        success { echo "Deployment completed successfully!" }
        failure { echo "Deployment failed." }
    }
}
